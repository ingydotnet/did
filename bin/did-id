#!/usr/bin/env bash

source "$(dirname $BASH_SOURCE)/../lib/use.bash"
use GetOpt

GETOPT_SPEC="\
  did id [<options>] <did-name>

See 'did help id' for more help.

Options:
--
j,json      Show Docker ID info in JSON (default)
y,yaml      Show Docker ID info in YAML
"

main() {
  GETOPT_ARGS='+did-name' \
    getopt "$@"
  normalize-did-name
  if $option_yaml; then
    docker run --rm --entrypoint cat "$did_name" /docker-id/docker-id.yml
  else
    docker run --rm --entrypoint cat "$did_name" /docker-id/docker-id.json
  fi
}

[[ $0 != "$BASH_SOURCE" ]] || main "$@"

# vim: set ft=sh lisp:
